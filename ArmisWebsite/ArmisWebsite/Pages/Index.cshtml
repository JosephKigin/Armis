@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Armis</h1>
    <p>A plating ERP developed for Cooperative plating.</p>
    <p>
        API Connection Status:
        @if (Model.CanConnectToApi)
        {<i class="fa fa-circle" style="color:green"></i>}
        else
        {<i class="fa fa-circle" style="color:red"></i>}
    </p>
    
    <div class="card">
        <div class="card card-body">
            <a class="btn btn-lg btn-outline-primary m-2">Order Entry</a>
            <a class="btn btn-lg btn-outline-primary m-2">Accounts Receivable</a>
            <a class="btn btn-lg btn-outline-primary m-2">Shop Floor</a>
        </div>
    </div>
</div>