@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container-fluid w-75" >
    <div class="text-center">
        <h1 class="display-4">Welcome to Armis</h1>
        <p>A plating ERP developed for Cooperative plating</p>
        <div id="browserWarning" class="alert alert-danger" hidden><span class="mb-1">Armis was designed for Google Chrome. Please switch to Google Chrome before continuing.</span></div>


        <div class="card">
            <div class="card card-body">
                <a class="btn btn-lg btn-outline-primary m-2">Order Entry</a>
                <a class="btn btn-lg btn-outline-primary m-2" asp-page="/Quality/QualityMenu">Quality Menu</a>
                <a class="btn btn-lg btn-outline-primary m-2">Accounts Receivable</a>
                <a class="btn btn-lg btn-outline-primary m-2">Shop Floor</a>
            </div>
        </div>
    </div>
</div>
<script>
    //Checks to make sure the user is on Chrome. If not, a warning message will display.
    $(document).ready(function () {
        if (!navigator.userAgent.includes("Chrome")) {
            document.getElementById("browserWarning").hidden = false;
        }
    });
</script>