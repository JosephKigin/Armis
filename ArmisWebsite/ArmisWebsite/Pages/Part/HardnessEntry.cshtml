@page
@model ArmisWebsite.Pages.Part.HardnessEntryModel
@{
    ViewData["Title"] = "HardnessEntry";
}
<div class="container-fluid w-75">
    <h1 class="mb-4">HardnessEntry</h1>

    @if (Model.Message != null)
    {
        @*Preloaded message.*@
        <p><partial name="/Pages/shared/partials/popupmessagepartial.cshtml" model="Model.Message" /></p>
    }
    <form method="post">
        <div class="row">

            <div class="col-lg-6">
                <h5 class="mb-3">Enter New Hardness</h5>
                <div class="form-inline mb-3 row">
                    <label class="mr-2 col-lg-4">Short Name: </label>
                    <input class="form-control col-lg-6" asp-for="ShortName" />
                </div>
                <div class="row"><div class="col-lg-4"></div><span class="text-danger" asp-validation-for="ShortName"></span></div>
                <div class="form-inline mb-3 row">
                    <label class="mr-2 col-lg-4">Description: </label>
                    <textarea class="form-control col-lg-6" asp-for="Description"></textarea>
                </div>
                <div class="row">
                    <div class="col-lg-4"></div><span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-inline mb-3 row">
                    <label class="mr-2 col-lg-4">Min Hardness: </label>
                    <input type="number" class="form-control col-lg-4" asp-for="Min" />
                </div>
                <div class="row">
                    <div class="col-lg-4"></div><span class="text-danger" asp-validation-for="Min"></span>
                </div> @*<-------- Validation goes here!*@
                <div class="form-inline row">
                    <label class="mr-2 col-lg-4">Max Hardness: </label>
                    <input type="number" class="form-control col-lg-4" asp-for="Max" />
                </div>
                <div class="row">
                    <div class="col-lg-4"></div><span class="text-danger" asp-validation-for="Max"></span>
                </div> @*<-------- Validation goes here!*@
                <div class="mr-5 mt-3 float-right">
                    <a type="button" class="btn btn-danger" asp-page="HardnessEntry">Reset</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>


            <div col-lg-6>
                <ul id="listAllHardnesses" class="list-group w-100" style="max-height: 42em; overflow:scroll;">
                    @if (Model.AllHardnesses.Any())
                    {
                        @foreach (var hardness in Model.AllHardnesses)
                        {
                            <li class="list-group-item">

                                <h5>@hardness.HardnessId. @hardness.ShortName </h5>
                                <b>Description: </b>@hardness.Description
                                <b>Min: </b>@hardness.HardnessMin
                                <b>Max: </b>@hardness.HardnessMax
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item">
                            No Hardnesses found
                        </li>
                    }

                </ul>
            </div>
        </div>
    </form>
</div>