@page
@model ArmisWebsite.Pages.ProcessMaintenance.SpecificationListingModel
@{
    ViewData["Title"] = "SpecificationListing";
}

<h1>SpecificationListing</h1>
<div id="collapseGroup" class="accordion">
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-group" style="height:42em; overflow-y:scroll">
                @foreach (var spec in Model.AllSpecs)
                {
                    <li class="list-group-item">
                        <a data-toggle="collapse" href="#specDetails-@spec.Id-@spec.InternalRev">@spec.Description [@spec.SubLevels.Count()]</a>
                        <a class"btn" style="float:right" asp-page="./SpecificationCreation" asp-route-aSpecId="@spec.Id"><i class="fa fa-edit"></i></a>
                    </li>
                }
            </ul>
        </div>

        <div class="col-lg-6">
            <ul class="list-group">
                @foreach (var spec in Model.AllSpecs)
                {
                    <li id="specDetails-@spec.Id-@spec.InternalRev" class="list-group-item collapse" data-parent="#collapseGroup">
                        @spec.Description
                        <ul class="nested">
                            @foreach (var subLevel in spec.SubLevels)
                            {
                                <li class="">
                                    @subLevel.Name
                                    <ul class="nested">
                                        @foreach (var choice in subLevel.Choices)
                                        {
                                            <li class="">
                                                @choice.Name
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>